<Page
    x:Class="Zoo_Navigator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Zoo_Navigator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="using:Zoo_Navigator.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <viewModels:MainViewModel/>
    </Page.DataContext>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/kort-over-zoo-2019-023.png"></ImageBrush>
        </Grid.Background>
        <!-- Big grid -->

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <!-- 10 Columns -->
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <!-- 10 Rows -->

        <!-- temporary background on StackPanel. -->
        <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2" Background="LightGray"
              Margin="10">
            <!-- TODO: make the buttons not go 'white' or ´transparent', when you hover/click them -->
            <Button Content="Kort" Style="{StaticResource MenuButton}"></Button>
            <Button Content="Menu" Style="{StaticResource MenuButton}"></Button>
            <Button Content="Tilbage" Style="{StaticResource BackButton}"></Button>
        </StackPanel>
        <!-- Button panel END -->

        <!-- Popup is still missing open/close functionality and styling -->
        <Popup Grid.Row="9" Grid.Column="4" VerticalOffset="200" HorizontalOffset="200" IsOpen="{Binding IsMenuOpen}" x:Name="StandardPopup">
            <Border BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" 
                        Background="Black"
                        BorderThickness="2" Width="200" Height="200">
                <ScrollViewer>
                    <Canvas HorizontalAlignment="Center" VerticalAlignment="Center" Background="Blue">
                        <TextBlock Text="Simple Popup" FontSize="24" HorizontalAlignment="Center"/>
                        <Button Content="Close" HorizontalAlignment="Center"/>
                    </Canvas>
                </ScrollViewer>
            </Border>
        </Popup>

    </Grid>
    <!-- Big Grid END -->
</Page>
